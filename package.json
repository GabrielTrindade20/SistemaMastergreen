{
  "name": "your-app",
  "version": "1.0.0",
  "description": "",
  "main": "dist/server/index.js", // Ponto de entrada da build
  "type": "module", // Importante para usar `import` e `export`
  "scripts": {
    "dev": "NODE_ENV=development ts-node-esm --project tsconfig.server.json server/index.ts",
    "build:client": "vite build",
    "build:server": "tsc --project tsconfig.server.json",
    "build": "npm run build:client && npm run build:server",
    "start": "NODE_ENV=production node dist/server/index.js"
  },
  "dependencies": {
    "express": "^4.18.2",
    "vite": "^5.0.12",
    "nanoid": "^5.0.5"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "ts-node": "^10.9.2",
    "ts-node-esm": "^1.0.2",
    "typescript": "^5.3.3"
  }
}